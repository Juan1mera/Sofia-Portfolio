---
// src/components/ProjectCard.astro
const { title, description, images = [], link = "#" } = Astro.props;

// Ensure we have at least one image to show default
const coverImage = images[0] || "";
---

<a href={link} class="project-card">
    <!-- Default State -->
    <div class="card-default">
        <div class="image-wrapper">
            <img src={coverImage} alt={title} loading="lazy" />
        </div>
        <h3 class="card-title">{title}</h3>
    </div>

    <!-- Hover State (Overlay) -->
    <div class="card-hover">
        <div class="hover-content">
            <div class="hover-header">
                <h3 class="card-title-hover">{title}</h3>
                <p class="card-desc">{description}</p>
            </div>
            <div class="hover-images">
                {
                    images.slice(0, 3).map((img, index) => (
                        <div class="mini-img">
                            <img
                                src={img}
                                alt={`${title} ${index + 1}`}
                                loading="lazy"
                            />
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</a>

<style>
    .project-card {
        position: relative;
        display: block;
        width: 100%;
        /* Aspect ratio for the card slot */
        aspect-ratio: 4/5;
        text-decoration: none;
        color: inherit;
    }

    /* Default Appearance */
    .card-default {
        position: absolute;
        inset: 0;
        display: flex;
        flex-direction: column;
        background: rgba(255, 255, 255, 0.4);
        border-radius: 4px;
        overflow: hidden;
        transition: opacity 0.3s ease;
    }

    .image-wrapper {
        flex: 1;
        overflow: hidden;
    }

    .image-wrapper img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: grayscale(20%);
        transition: transform 0.5s ease;
    }

    .card-title {
        padding: 1rem;
        font-family: "Times New Roman", serif;
        font-size: 1.5rem;
        font-weight: normal;
        font-style: italic;
        margin: 0;
        background: rgba(255, 255, 255, 0.8);
        color: #333;
        text-align: center;
    }

    /* Hover State Appearance */
    .card-hover {
        position: absolute;
        top: -10%;
        left: -10%;
        width: 120%;
        height: auto;
        min-height: 120%;
        background: #fff;
        border-radius: 4px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
        opacity: 0;
        pointer-events: none; /* Initially untouchable */
        z-index: 10;
        transform: scale(0.95);
        transition: all 0.3s cubic-bezier(0.165, 0.84, 0.44, 1);
        display: flex;
        flex-direction: column;
        padding: 1rem;
        border: 1px solid rgba(0, 0, 0, 0.1);
    }

    .project-card:hover .card-hover {
        opacity: 1;
        pointer-events: auto;
        transform: scale(1);
    }

    /* Optional: Hide default when hovering to avoid clutter or keep it under? 
     Keeping it under is safer in case hover doesn't load instantly. 
     But let's fade it slightly. 
  */
    .project-card:hover .card-default {
        opacity: 0;
    }

    .hover-header {
        margin-bottom: 1rem;
        text-align: center;
    }

    .card-title-hover {
        font-family: "Times New Roman", serif;
        font-size: 1.8rem;
        font-style: italic;
        margin: 0 0 0.5rem 0;
        color: #1a1a1a;
    }

    .card-desc {
        font-family: "Inter", sans-serif;
        font-size: 0.85rem;
        color: #666;
        line-height: 1.4;
        margin: 0;
    }

    .hover-images {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 0.5rem;
        margin-top: auto;
    }

    .mini-img {
        aspect-ratio: 1/1;
        border-radius: 2px;
        overflow: hidden;
    }

    .mini-img img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
</style>
